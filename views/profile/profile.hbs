<div id="user-profile">
<img src={{profilePicture}} alt="profilepic" class="profile-pic">
<a href="/edit-profile">Edit profile</a>
<h2>{{username}} profile</h2>


{{#each favoriteGames}}
<p>{{title}}</p>
<img src="{{image}}" alt="game Image" width="400px">

{{#if genre.1.name}}
<p >{{genre.0.name}} || {{genre.1.name}}</p>
{{/if}}

{{#unless genre.1.name}}
<p >{{genre.0.name}}</p>
{{/unless}}

<a href="/details/{{apiId}}">See details</a>


<form action="/deleteFavGame/{{_id}}" method="post">
<button type="submit">Delete Game</button>
</form>
{{/each}}
<a href="/create-game">Add Game</a>
<a href="/auth/logout">Log Out</a>

<form action="/profile/delete/{{_id}}" method="post">
  <button type="submit">Delete account</button>
</form>
</div>